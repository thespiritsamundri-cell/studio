rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents for any signed-in user.
    // This is a secure default for a single-admin application.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read/write their own data
    // This is a common pattern for single-user admin apps
    match /{collection}/{id} {
      allow read, write: if request.auth != null;
    }
  }
}
