rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Any authenticated user can read THEIR OWN user document. This is key.
    // Only a super_admin can list, create, update, or delete other users.
    match /users/{userId} {
      allow read: if isAuth() && request.auth.uid == userId;
      allow list, write: if isAuth() && getUserRole() == 'super_admin';
    }

    // --- ACADEMIC & ADMIN COLLECTIONS (Coordinator & Super Admin) ---
    match /students/{docId=**} {
      allow read, list, write: if isAuth() && getUserRole() in ['super_admin', 'coordinator'];
    }
    match /families/{docId=**} {
      allow read, list, write: if isAuth() && getUserRole() in ['super_admin', 'coordinator'];
    }
     match /alumni/{docId=**} {
      allow read, list, write: if isAuth() && getUserRole() in ['super_admin', 'coordinator'];
    }
    match /classes/{docId=**} {
      allow read, list, write: if isAuth() && getUserRole() in ['super_admin', 'coordinator'];
    }
    match /teachers/{docId=**} {
      allow read, list, write: if isAuth() && getUserRole() in ['super_admin', 'coordinator'];
    }
    match /attendances/{docId=**} {
       allow read, list, write: if isAuth() && getUserRole() in ['super_admin', 'coordinator'];
    }
    match /teacherAttendances/{docId=**} {
       allow read, list, write: if isAuth() && getUserRole() in ['super_admin', 'coordinator'];
    }
    match /exams/{docId=**} {
      allow read, list, write: if isAuth() && getUserRole() in ['super_admin', 'coordinator'];
    }
     match /timetables/{docId=**} {
      allow read, list, write: if isAuth() && getUserRole() in ['super_admin', 'coordinator'];
    }

    // --- FINANCIAL COLLECTIONS (Accountant & Super Admin) ---
    match /fees/{docId=**} {
      allow read, list, write: if isAuth() && getUserRole() in ['super_admin', 'accountant'];
    }
    match /expenses/{docId=**} {
      allow read, list, write: if isAuth() && getUserRole() in ['super_admin', 'accountant'];
    }

    // --- SUPER ADMIN ONLY COLLECTIONS ---
    match /settings/{docId=**} {
      allow read, write: if isAuth() && getUserRole() == 'super_admin';
    }
     match /activityLog/{docId=**} {
      allow read, list, write: if isAuth() && getUserRole() == 'super_admin';
    }
    match /sessions/{docId=**} {
       allow read, list, write: if isAuth() && getUserRole() == 'super_admin';
    }
  }
}