
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to get the user's role from their document.
    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Allow users to read their own profile to determine their role.
    // Super admins can read/write any user document to manage roles.
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow list, write: if getRole() == "super_admin";
    }

    // --- ACADEMIC & ADMIN COLLECTIONS ---
    // Accessible by Super Admin and Coordinator
    match /students/{docId} {
      allow list, read, write: if getRole() in ["super_admin", "coordinator"];
    }
    match /families/{docId} {
      allow list, read, write: if getRole() in ["super_admin", "coordinator"];
    }
    match /teachers/{docId} {
      allow list, read, write: if getRole() in ["super_admin", "coordinator"];
    }
    match /classes/{docId} {
      allow list, read, write: if getRole() in ["super_admin", "coordinator"];
    }
    match /attendances/{docId} {
      allow list, read, write: if getRole() in ["super_admin", "coordinator"];
    }
     match /teacherAttendances/{docId} {
      allow list, read, write: if getRole() in ["super_admin", "coordinator"];
    }
    match /exams/{docId} {
      allow list, read, write: if getRole() in ["super_admin", "coordinator"];
    }
    match /timetables/{docId} {
        allow list, read, write: if getRole() in ["super_admin", "coordinator"];
    }
     match /alumni/{docId} {
      allow list, read, write: if getRole() in ["super_admin", "coordinator"];
    }


    // --- FINANCIAL COLLECTIONS ---
    // Accessible by Super Admin and Accountant
    match /fees/{docId} {
      allow list, read, write: if getRole() in ["super_admin", "accountant"];
    }
    match /expenses/{docId} {
      allow list, read, write: if getRole() in ["super_admin", "accountant"];
    }
    

    // --- SUPER ADMIN ONLY COLLECTIONS ---
    match /Settings/{docId} {
      allow list, read, write: if getRole() == "super_admin";
    }
     match /branding/{docId} {
      allow list, read, write: if getRole() == "super_admin";
    }
    match /activityLog/{docId} {
      allow list, read, write: if getRole() == "super_admin";
    }
    match /sessions/{docId} {
      allow list, read, write: if getRole() == "super_admin";
    }
    match /archived/{docId} { // Assuming you might have a dedicated collection
        allow list, read, write: if getRole() == "super_admin";
    }
  }
}
