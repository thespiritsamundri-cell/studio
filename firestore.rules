
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSuperAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }

    function getPermissions() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions;
    }

    match /users/{userId} {
      // Any authenticated user can read their own user document to get their permissions.
      allow read: if request.auth.uid == userId;
      // Only a super admin can create, update, or delete user documents.
      allow write: if isSuperAdmin();
      allow list: if isSuperAdmin();
    }
    
    match /students/{docId} {
      allow list, read, write: if isSuperAdmin() || getPermissions().students == true;
    }

    match /families/{docId} {
      allow list, read, write: if isSuperAdmin() || getPermissions().families == true;
    }

    match /fees/{docId} {
      allow list, read, write: if isSuperAdmin() || getPermissions().feeCollection == true || getPermissions().income == true;
    }
    
    match /teachers/{docId} {
      allow list, read, write: if isSuperAdmin() || getPermissions().teachers == true;
    }
    
    match /classes/{docId} {
      allow list, read, write: if isSuperAdmin() || getPermissions().classes == true;
    }

    match /attendances/{docId} {
      allow list, read, write: if isSuperAdmin() || getPermissions().attendance == true;
    }
    
    match /teacherAttendances/{docId} {
      allow list, read, write: if isSuperAdmin() || getPermissions().attendance == true;
    }

    match /exams/{docId} {
      allow list, read, write: if isSuperAdmin() || getPermissions().examSystem == true;
    }

    match /expenses/{docId} {
      allow list, read, write: if isSuperAdmin() || getPermissions().expenses == true;
    }

    match /timetables/{docId} {
      allow list, read, write: if isSuperAdmin() || getPermissions().timetable == true;
    }
    
    match /alumni/{docId} {
        allow list, read, write: if isSuperAdmin() || getPermissions().alumni == true;
    }
    
    match /archived/{docId} {
      allow list, read, write: if isSuperAdmin() || getPermissions().archived == true;
    }
    
    match /yearbook/{docId} {
        allow list, read, write: if isSuperAdmin() || getPermissions().yearbook == true;
    }

    match /activityLog/{docId} {
      allow read: if request.auth != null; // All auth users can read
      allow list, write: if isSuperAdmin();
    }

    match /sessions/{docId} {
        allow read, write: if request.auth != null; // All auth users can manage their own sessions
    }

    match /Settings/{docId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }
    
    match /branding/{docId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }
  }
}
