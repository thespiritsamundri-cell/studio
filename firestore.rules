rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get the user's role from their document.
    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Allow a user to read their OWN document to determine their role.
    // This is the key to breaking the "catch-22" permission error.
    // Write access is restricted to super_admin.
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow list, write: if getRole() == "super_admin";
    }

    // Students: Coordinators and Super Admins can manage.
    match /students/{docId=**} {
      allow read, write: if getRole() in ["super_admin", "coordinator"];
    }
    
    // Alumni: Coordinators and Super Admins can manage.
    match /alumni/{docId=**} {
      allow read, write: if getRole() in ["super_admin", "coordinator"];
    }
    
    // Families: Coordinators and Super Admins can manage.
    match /families/{docId=**} {
      allow read, write: if getRole() in ["super_admin", "coordinator"];
    }

    // Teachers: Coordinators and Super Admins can manage.
    match /teachers/{docId=**} {
      allow read, write: if getRole() in ["super_admin", "coordinator"];
    }
    
    // Classes: All authenticated users can read/list. Write is restricted.
    match /classes/{docId=**} {
      allow read: if request.auth != null;
      allow write: if getRole() in ["super_admin", "coordinator"];
    }
    
    // Fees: Accountants and Super Admins can manage.
    match /fees/{docId=**} {
      allow read, write: if getRole() in ["super_admin", "accountant"];
    }

    // Expenses: Accountants and Super Admins can manage.
    match /expenses/{docId=**} {
      allow read, write: if getRole() in ["super_admin", "accountant"];
    }

    // Attendance (Students): Coordinators and Super Admins can manage.
    match /attendances/{docId=**} {
      allow read, write: if getRole() in ["super_admin", "coordinator"];
    }
    
    // Attendance (Teachers): Coordinators and Super Admins can manage.
    match /teacherAttendances/{docId=**} {
      allow read, write: if getRole() in ["super_admin", "coordinator"];
    }

    // Exams: Coordinators and Super Admins can manage.
    match /exams/{docId=**} {
      allow read, write: if getRole() in ["super_admin", "coordinator"];
    }
    
    // Timetables: Coordinators and Super Admins can manage.
    match /timetables/{docId=**} {
      allow read, write: if getRole() in ["super_admin", "coordinator"];
    }

    // Settings: Only Super Admins can access.
    match /Settings/{docId=**} {
      allow read, write: if getRole() == "super_admin";
    }

    // Activity Log: Only Super Admins can read/write.
    match /activityLog/{docId=**} {
      allow read, write: if getRole() == "super_admin";
    }
    
    // Sessions: Only Super Admins can manage sessions.
    match /sessions/{docId=**} {
      allow read, write: if getRole() == "super_admin";
    }

  }
}
