rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get the role of the requesting user.
    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Users can read their own data. Only super_admin can write/change roles.
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if getRole() == "super_admin";
    }

    // Academic data accessible by coordinator and super_admin
    match /students/{docId} {
      allow read, write: if getRole() in ["super_admin", "coordinator"];
    }
    match /alumni/{docId} {
       allow read, write: if getRole() in ["super_admin", "coordinator"];
    }
    match /teachers/{docId} {
      allow read, write: if getRole() in ["super_admin", "coordinator"];
    }
    match /classes/{docId} {
      allow read, write: if getRole() in ["super_admin", "coordinator"];
    }
     match /attendances/{docId} {
      allow read, write: if getRole() in ["super_admin", "coordinator"];
    }
     match /teacherAttendances/{docId} {
      allow read, write: if getRole() in ["super_admin", "coordinator"];
    }
    match /exams/{docId} {
      allow read, write: if getRole() in ["super_admin", "coordinator"];
    }
    match /timetables/{docId} {
       allow read, write: if getRole() in ["super_admin", "coordinator"];
    }
    
    // Families are linked to both academic and financial data
    match /families/{docId} {
        allow read, write: if getRole() in ["super_admin", "coordinator", "accountant"];
    }
    
    // Financial data accessible by accountant and super_admin
    match /fees/{docId} {
      allow read, write: if getRole() in ["super_admin", "accountant"];
    }
    match /expenses/{docId} {
      allow read, write: if getRole() in ["super_admin", "accountant"];
    }
    
    // Super-admin only collections
    match /settings/{docId} {
      allow read, write: if getRole() == "super_admin";
    }
    match /sessions/{docId} {
        allow read, write: if getRole() == "super_admin" || request.auth.uid == resource.data.userId;
    }
     match /activityLog/{docId} {
        allow read, write: if getRole() == "super_admin";
    }
  }
}
