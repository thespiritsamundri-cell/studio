rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access for all users for the next 30 days.
    // This is useful for development but must be secured before production.
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2024, 7, 20);
    }
  }
}
