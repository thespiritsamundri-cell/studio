rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    function isSuperAdmin() {
      return getRole(request.auth.uid) == 'super_admin';
    }
    
    function isAccountant() {
      return getRole(request.auth.uid) == 'accountant';
    }
    
    function isCoordinator() {
      return getRole(request.auth.uid) == 'coordinator';
    }

    match /users/{userId} {
      allow read: if request.auth.uid == userId || isSuperAdmin();
      allow write: if isSuperAdmin();
    }
    
    match /Settings/{docId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }
    
    match /branding/{docId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin();
    }
    
    match /students/{docId} {
      allow read, write: if isSuperAdmin() || isCoordinator();
    }
    
    match /alumni/{docId} {
       allow read, write: if isSuperAdmin() || isCoordinator();
    }

    match /families/{docId} {
      allow read, write: if isSuperAdmin() || isCoordinator();
    }

    match /teachers/{docId} {
      allow read, write: if isSuperAdmin() || isCoordinator();
    }

    match /classes/{docId} {
      allow read, write: if isSuperAdmin() || isCoordinator();
    }
    
    match /timetables/{docId} {
      allow read, write: if isSuperAdmin() || isCoordinator();
    }
    
    match /attendances/{docId} {
       allow read, write: if isSuperAdmin() || isCoordinator();
    }
    
    match /teacherAttendances/{docId} {
       allow read, write: if isSuperAdmin() || isCoordinator();
    }
    
    match /exams/{docId} {
      allow read, write: if isSuperAdmin() || isCoordinator();
    }
    
    match /fees/{docId} {
      allow read, write: if isSuperAdmin() || isAccountant();
    }

    match /expenses/{docId} {
       allow read, write: if isSuperAdmin() || isAccountant();
    }
    
    match /activityLog/{docId} {
      allow read: if isSuperAdmin();
      allow write: if request.auth != null; // Allow any authenticated user to add logs
    }
    
    match /sessions/{docId} {
      allow read, write: if request.auth != null; // Allow users to manage their own sessions
    }
  }
}
