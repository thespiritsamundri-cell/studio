
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Logged-in users can read/write their own data
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Make receipts publicly readable
    match /receipts/{receiptId} {
      allow get: if true;
      allow list: if false; // Prevent listing all receipts
      allow write: if request.auth != null; // Only authenticated users can create/update
    }
    
    // Allow logged-in users to read/write all other collections
    // This is a general rule and can be refined for more granular access control
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
