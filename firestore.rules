rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to get user's role and permissions from their own user document
    function getRole() {
      // Allow reading own user doc to get role.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    function getPermissions() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions;
    }

    // ---------------------------------------------------
    // Users Collection Rules
    // ---------------------------------------------------
    match /users/{userId} {
      // Allow any authenticated user to read THEIR OWN user document. This is key.
      allow read: if request.auth.uid == userId;
      // Only super admins can create, update, or delete user documents.
      allow write: if getRole() == 'super_admin';
    }

    // ---------------------------------------------------
    // School Settings & Branding
    // ---------------------------------------------------
     match /Settings/{docId} {
      // Allow any authenticated user to read settings
      allow read: if request.auth != null;
      // Only super admin can write settings
      allow write: if getRole() == 'super_admin';
    }
     match /branding/{docId} {
      allow read: if request.auth != null;
      allow write: if getRole() == 'super_admin';
    }
     match /sessions/{docId} {
      allow read, write: if request.auth != null;
    }

    // ---------------------------------------------------
    // Data Collections
    // ---------------------------------------------------

    match /students/{docId} {
      allow list, read: if getRole() == 'super_admin' || getPermissions().students == true || getPermissions().admissions == true || getRole() in ['accountant', 'coordinator'];
      allow write: if getRole() == 'super_admin' || getPermissions().students == true || getPermissions().admissions == true;
    }

    match /families/{docId} {
      allow list, read: if getRole() == 'super_admin' || getPermissions().families == true || getPermissions().admissions == true || getRole() in ['accountant', 'coordinator'];
      allow write: if getRole() == 'super_admin' || getPermissions().families == true || getPermissions().admissions == true;
    }
    
    match /alumni/{docId} {
      allow list, read: if getRole() == 'super_admin' || getPermissions().alumni == true || getRole() in ['accountant', 'coordinator'];
      allow write: if getRole() == 'super_admin' || getPermissions().alumni == true;
    }

    match /classes/{docId} {
      allow list, read: if getRole() == 'super_admin' || getPermissions().classes == true || getRole() in ['accountant', 'coordinator'];
      allow write: if getRole() == 'super_admin' || getPermissions().classes == true;
    }

    match /teachers/{docId} {
      allow list, read: if getRole() == 'super_admin' || getPermissions().teachers == true || getRole() in ['accountant', 'coordinator'];
      allow write: if getRole() == 'super_admin' || getPermissions().teachers == true;
    }

    match /timetables/{docId} {
      allow list, read: if getRole() == 'super_admin' || getPermissions().timetable == true || getRole() in ['accountant', 'coordinator'];
      allow write: if getRole() == 'super_admin' || getPermissions().timetable == true;
    }

    match /attendances/{docId} {
      allow list, read: if getRole() == 'super_admin' || getPermissions().attendance == true;
      allow write: if getRole() == 'super_admin' || getPermissions().attendance == true;
    }
    
    match /teacherAttendances/{docId} {
      allow list, read: if getRole() == 'super_admin' || getPermissions().attendance == true || getRole() in ['accountant', 'coordinator'];
      allow write: if getRole() == 'super_admin' || getPermissions().attendance == true;
    }

    match /exams/{docId} {
      allow list, read: if getRole() == 'super_admin' || getPermissions().examSystem == true || getRole() in ['accountant', 'coordinator'];
      allow write: if getRole() == 'super_admin' || getPermissions().examSystem == true;
    }

    match /fees/{docId} {
      allow list, read: if getRole() == 'super_admin' || getPermissions().feeCollection == true || getPermissions().feeVouchers == true || getPermissions().income == true || getPermissions().accounts == true;
      allow write: if getRole() == 'super_admin' || getPermissions().feeCollection == true || getPermissions().feeVouchers == true || getPermissions().income == true;
    }

    match /expenses/{docId} {
      allow list, read: if getRole() == 'super_admin' || getPermissions().expenses == true || getPermissions().accounts == true;
      allow write: if getRole() == 'super_admin' || getPermissions().expenses == true;
    }
    
    match /activityLog/{docId} {
        allow list, read: if getRole() == 'super_admin' || getPermissions().settings == true;
        allow write: if request.auth != null; // Any logged-in user can write to the log
    }

    // Default deny all other reads/writes
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
