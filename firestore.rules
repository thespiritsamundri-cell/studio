rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper Functions
    function isSuperAdmin() {
      return getUserData(request.auth.uid).role == 'super_admin';
    }

    function hasPermission(permission) {
      return isSuperAdmin() || getUserData(request.auth.uid).permissions[permission] == true;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    // Collection Rules
    match /users/{userId} {
      allow read: if request.auth != null;
      allow list: if isSuperAdmin();
      allow write: if isSuperAdmin();
    }
    
    match /students/{studentId} {
      allow read, list: if hasPermission('students');
      allow write: if hasPermission('students') || hasPermission('admissions');
    }
    
    match /families/{familyId} {
        allow read, list: if request.auth != null; // Most pages need to read family data
        allow write: if hasPermission('families');
    }

    match /fees/{feeId} {
        allow read, list: if hasPermission('feeCollection') || hasPermission('income') || hasPermission('accounts');
        allow write: if hasPermission('feeCollection') || hasPermission('admissions');
    }

    match /expenses/{expenseId} {
        allow read, list: if hasPermission('expenses') || hasPermission('accounts');
        allow write: if hasPermission('expenses');
    }

    match /classes/{classId} {
        allow read, list: if request.auth != null;
        allow write: if hasPermission('classes');
    }

    match /teachers/{teacherId} {
        allow read, list: if hasPermission('teachers') || hasPermission('timetable');
        allow write: if hasPermission('teachers');
    }

    match /timetables/{timetableId} {
        allow read, list: if hasPermission('timetable');
        allow write: if hasPermission('timetable');
    }

    match /exams/{examId} {
        allow read, list: if hasPermission('examSystem');
        allow write: if hasPermission('examSystem');
    }

    match /alumni/{alumniId} {
        allow read, list: if hasPermission('alumni');
        allow write: if hasPermission('students');
    }

    match /attendances/{attendanceId} {
        allow read, list: if hasPermission('attendance');
        allow write: if hasPermission('attendance');
    }

    match /teacherAttendances/{attendanceId} {
        allow read, list: if hasPermission('attendance');
        allow write: if hasPermission('attendance');
    }
    
    match /activityLog/{logId} {
      allow read, list, write: if isSuperAdmin();
    }
    
    match /notifications/{notificationId} {
      allow read, list, write: if isSuperAdmin();
      allow create: if request.auth != null;
    }
    
    match /Settings/{settingId} {
        allow read: if request.auth != null;
        allow write: if isSuperAdmin() || hasPermission('settings');
    }
    
    // Default deny all other collections
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
