rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // Authenticated users can read their own user document to get their role.
    // Only super_admin can create, update, or delete users.
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow list, write: if getRole(request.auth.uid) == "super_admin";
    }

    // Students, Families, Classes, Teachers
    match /students/{docId} {
      allow list, read, write: if getRole(request.auth.uid) in ["super_admin", "coordinator"];
    }
    match /families/{docId} {
      allow list, read, write: if getRole(request.auth.uid) in ["super_admin", "coordinator"];
    }
    match /classes/{docId} {
      allow list, read, write: if getRole(request.auth.uid) in ["super_admin", "coordinator"];
    }
    match /teachers/{docId} {
      allow list, read, write: if getRole(request.auth.uid) in ["super_admin", "coordinator"];
    }
     match /alumni/{docId} {
      allow list, read, write: if getRole(request.auth.uid) in ["super_admin", "coordinator"];
    }

    // Attendance
    match /attendances/{docId} {
      allow list, read, write: if getRole(request.auth.uid) in ["super_admin", "coordinator"];
    }
    match /teacherAttendances/{docId} {
      allow list, read, write: if getRole(request.auth.uid) in ["super_admin", "coordinator"];
    }

    // Exams & Timetables
    match /exams/{docId} {
      allow list, read, write: if getRole(request.auth.uid) in ["super_admin", "coordinator"];
    }
     match /timetables/{docId} {
      allow list, read, write: if getRole(request.auth.uid) in ["super_admin", "coordinator"];
    }

    // Financial
    match /fees/{docId} {
      allow list, read, write: if getRole(request.auth.uid) in ["super_admin", "accountant"];
    }
    match /expenses/{docId} {
      allow list, read, write: if getRole(request.auth.uid) in ["super_admin", "accountant"];
    }

    // Settings & Logs (Super Admin only)
    match /Settings/{docId} {
      allow list, read, write: if getRole(request.auth.uid) == "super_admin";
    }
     match /activityLog/{docId} {
      allow list, read, write: if getRole(request.auth.uid) == "super_admin";
    }
     match /sessions/{docId} {
      allow list, read, write: if getRole(request.auth.uid) == "super_admin";
    }
     match /branding/{docId} {
       allow read: if true; // Publicly readable for logos/favicons
       allow write: if getRole(request.auth.uid) == "super_admin";
     }
  }
}
